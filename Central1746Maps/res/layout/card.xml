<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+card/rl_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/roundedrect"
        android:paddingBottom="35dp" >

        <TextView
            android:id="@+card/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="#888888"
            android:textSize="12sp" />

        <TextView
            android:id="@+card/tv_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+card/tv_type"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@+card/ll_like"
            android:textColor="#969696"
            android:textSize="24sp" />

        <LinearLayout
            android:id="@+card/ll_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:text="30"
                android:textColor="#888888"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/like" />
        </LinearLayout>

        <LinearLayout
            android:id="@+card/ll_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+card/ll_like"
            android:layout_marginTop="4dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="2dp"
                android:text="12"
                android:textColor="#888888"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/bubble" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+card/ll_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+card/rl_content"
        android:layout_alignLeft="@+card/rl_content"
        android:layout_alignRight="@+card/rl_content">

        <TextView
            android:id="@+card/tv_state"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="14sp"
            android:shadowColor="@android:color/white"
            android:shadowDx="1.0"
            android:shadowDy="1.0"
            android:shadowRadius="0.5" />
    </LinearLayout>

</RelativeLayout>