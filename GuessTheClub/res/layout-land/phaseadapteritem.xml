<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:isScrollContainer="true"
	android:layout_height="fill_parent"
	android:scrollbars="vertical"
	android:scrollbarAlwaysDrawVerticalTrack="true"
	android:orientation="vertical"
	android:weightSum="1.5">
	
    <View 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"/>
    
    <LinearLayout
        android:weightSum="2.25"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <View 
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="0.5"/>
		<ScrollView
		    android:layout_width="0dp"
		    android:layout_height="fill_parent"
		    android:fillViewport="true"
		    android:layout_weight="1.25">
		    
		    <RelativeLayout
		        android:layout_width="fill_parent"
		        android:layout_height="fill_parent">
		        
		        <LinearLayout
			        android:orientation="vertical"
			        android:layout_width="fill_parent"
			        android:layout_height="fill_parent"
			        android:layout_gravity="center"
			        android:gravity="center"
			        android:id="@+phaseadapteritem/ll_box"
			        android:background="@drawable/roundborder_gray">
			        
			        <br.com.zynger.guesstheclub.view.CoolveticaTextView
				       android:id="@+phaseadapteritem/tv_title"
				       android:textColor="@color/greendroid_br"
				       android:shadowColor="@color/gray_shadow"
				       android:shadowDx="1"
				       android:shadowDy="1"
				       android:shadowRadius="0.5"
				       android:textSize="36dp"
				       android:textStyle="bold"
				       android:gravity="center_horizontal"
				       android:layout_width="fill_parent"
				       android:layout_height="wrap_content"/>
				
				   <br.com.zynger.guesstheclub.view.CoolveticaTextView
				       android:id="@+phaseadapteritem/tv_numFoundLogos"
				       android:textSize="20dp"
				       android:textColor="@color/bluedroid_br"
				       android:shadowColor="@color/gray_shadow"
				       android:shadowDx="1"
				       android:shadowDy="1"
				       android:shadowRadius="0.5"
				       android:gravity="center_horizontal"
				       android:layout_width="fill_parent"
				       android:layout_height="wrap_content"/>
				   
				   <br.com.zynger.guesstheclub.view.CoolveticaTextView
				       android:id="@+phaseadapteritem/tv_numTipsUsed"
				       android:textSize="20dp"
				       android:textColor="@color/pink_skin"
				       android:shadowColor="@color/gray_shadow"
				       android:shadowDx="1"
				       android:shadowDy="1"
				       android:shadowRadius="0.5"
				       android:gravity="center_horizontal"
				       android:layout_width="fill_parent"
				       android:layout_height="wrap_content"/>
			        
			    </LinearLayout>
			    
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:visibility="gone"
		            android:id="@+phaseadapteritem/ll_stars"
		            android:layout_alignParentTop="true"
		            android:layout_marginTop="2dp"
		            android:gravity="center">
		            <ImageView
		                android:src="@drawable/img_stars"
		                android:layout_width="91dp"
		                android:layout_height="40.8dp"/>
		        </LinearLayout>
			    
			    <ImageView
		            android:layout_width="36dp"
		            android:layout_height="36dp"
		            android:layout_margin="2dp"
		            android:visibility="gone"
		            android:id="@+phaseadapteritem/iv_locked"
		            android:src="@drawable/img_locked"
		            android:layout_alignParentTop="true"
		            android:layout_alignParentRight="true"/>
			    
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="36dp"
		            android:layout_alignParentBottom="true"
		            android:gravity="center_horizontal">    
				
					<ImageView
			            android:layout_width="64dp"
			            android:layout_height="64dp"
			            android:layout_marginBottom="-32dp"
			            android:id="@+phaseadapteritem/iv_guessed1"
			            android:visibility="gone"
			            android:scaleType="fitCenter"
			            android:layout_alignParentBottom="true"/>
					
					<ImageView
			            android:layout_width="64dp"
			            android:layout_height="64dp"
			            android:layout_marginBottom="-32dp"
			            android:id="@+phaseadapteritem/iv_guessed2"
			            android:layout_marginLeft="30dp"
			            android:layout_toRightOf="@+phaseadapteritem/iv_guessed1"
			            android:visibility="gone"
			            android:scaleType="fitCenter"
			            android:layout_alignParentBottom="true"/>
					
					<ImageView
			            android:layout_width="64dp"
			            android:layout_height="64dp"
			            android:layout_marginBottom="-32dp"
			            android:id="@+phaseadapteritem/iv_guessed3"
			            android:layout_marginLeft="30dp"
			            android:layout_toRightOf="@+phaseadapteritem/iv_guessed2"
			            android:visibility="gone"
			            android:scaleType="fitCenter"
			            android:layout_alignParentBottom="true"/>
					
					<ImageView
			            android:layout_width="64dp"
			            android:layout_height="64dp"
			            android:layout_marginBottom="-32dp"
			            android:id="@+phaseadapteritem/iv_guessed4"
			            android:layout_marginLeft="30dp"
			            android:layout_toRightOf="@+phaseadapteritem/iv_guessed3"
			            android:visibility="gone"
			            android:scaleType="fitCenter"
			            android:layout_alignParentBottom="true"/>
				</LinearLayout>
		    </RelativeLayout>
		</ScrollView>
		<View 
	        android:layout_width="0dp"
	        android:layout_height="fill_parent"
	        android:layout_weight="0.5"/>        
    </LinearLayout>
	
	<View 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"/>
</LinearLayout>