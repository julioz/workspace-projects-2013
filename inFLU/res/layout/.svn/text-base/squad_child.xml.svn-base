<?xml version="1.0" encoding="utf-8"?>
<TableLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:stretchColumns="1,2">
	
	<TableRow
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:weightSum="4">
	
		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center">
		
			<ImageView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:adjustViewBounds="true"
				android:src="@drawable/elenco_araujo"
				android:id="@+exlvchild/child_photo"/>
		
		</LinearLayout>
		
		<RelativeLayout
			android:orientation="vertical"
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="2"
			android:gravity="left|center_vertical"
			android:paddingLeft="4dp">
			
			<TextView
				android:id="@+exlvchild/child_name"
				android:textSize="18dp"
				android:textColor="#FFFFFFFF"
				android:textStyle="bold"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>
				
			<TextView
				android:layout_below="@+exlvchild/child_name"
				android:id="@+exlvchild/text_naturality"
				android:textSize="15dp"
				android:textColor="#0bad73"
				android:text="Naturalidade"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>
				
			<TextView
				android:layout_below="@+exlvchild/text_naturality"
				android:id="@+exlvchild/child_naturality"
				android:textSize="13dp"
				android:textColor="#FFFFFFFF"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>
				
			<TextView
				android:layout_below="@+exlvchild/child_naturality"
				android:id="@+exlvchild/text_heightweight"
				android:textSize="15dp"
				android:textColor="#0bad73"
				android:text="Altura / Peso"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>
				
			<TextView
				android:layout_below="@+exlvchild/text_heightweight"
				android:id="@+exlvchild/child_heightweight"
				android:textSize="13dp"
				android:textColor="#FFFFFFFF"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"/>
			
			
		</RelativeLayout>
		
		<LinearLayout
			android:layout_width="0dp"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:gravity="center"
			android:id="@+exlvchild/numberbg"
			android:background="#002f24">
			
			<TextView
				android:id="@+exlvchild/child_number"
				android:textSize="32dp"
				android:textColor="#0fad94"
				android:textStyle="bold"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"/>
			
		</LinearLayout>
	
	</TableRow>	
</TableLayout>