<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_below="@+home/llLogo"
	android:id="@+home/tl_buttons"
	android:weightSum="3">
	
	<TableRow android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:gravity="center"
		android:weightSum="3"
		android:layout_weight="1">
		
		<LinearLayout android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center"
			android:layout_weight="1">
			
			<ImageButton android:src="@drawable/ic_themes"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+home/ibThemes"
				android:background="@null"/>
				
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#FFFFFFFF"
				android:gravity="center_horizontal"
				android:text="Temas"
				android:textStyle="bold"/>

		</LinearLayout>
		
		<LinearLayout android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center"
			android:layout_weight="1">
			
			<ImageButton android:src="@drawable/ic_share"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+home/ibShare"
				android:background="@null"/>
				
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#FFFFFFFF"
				android:text="Compartilhar"
				android:textStyle="bold" />

		</LinearLayout>
		
		<LinearLayout android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center"
			android:layout_weight="1">
			
			<ImageButton android:src="@drawable/ic_rate"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+home/ibRate"
				android:background="@null"/>
				
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#FFFFFFFF"
				android:text="Avaliar"
				android:textStyle="bold" />

		</LinearLayout>
	</TableRow>
	
	<TableRow android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:gravity="center"
		android:weightSum="3"
		android:layout_weight="1">
		
		<LinearLayout android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center"
			android:layout_weight="1">
			
			<ImageButton android:src="@drawable/ic_settings"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+home/ibSettings"
				android:background="@null"/>
				
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#FFFFFFFF"
				android:gravity="center_horizontal"
				android:text="Config."
				android:textStyle="bold"/>

		</LinearLayout>
		
		<LinearLayout android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center"
			android:layout_weight="1" />
		
		<LinearLayout android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center"
			android:layout_weight="1">
			
			<ImageButton android:src="@drawable/ic_about"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+home/ibAbout"
				android:background="@null"/>
				
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textColor="#FFFFFFFF"
				android:text="Sobre"
				android:textStyle="bold"/>

		</LinearLayout>
	</TableRow>
	
	<TableRow android:layout_width="fill_parent"
		android:layout_height="0dp"
		android:gravity="center"
		android:weightSum="3"
		android:layout_weight="1">
		
		<LinearLayout android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center"
			android:layout_weight="1">
			
		    <ImageButton android:src="@drawable/ic_idols"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:visibility="invisible"
				android:background="@null"/>
				
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:visibility="invisible"
				android:textColor="#FFFFFFFF"
				android:text="Ídolos"
				android:textStyle="bold"/>
		    
		</LinearLayout>
		
		<LinearLayout android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center"
			android:layout_weight="1">
		    
		</LinearLayout>
		
		<LinearLayout android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:gravity="center"
			android:layout_weight="1">
		    
		</LinearLayout>
	</TableRow>
	
</TableLayout>