<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@null"
	android:orientation="vertical">
	<RelativeLayout
	    android:layout_width="wrap_content"
	    android:layout_height="55dp">
	    
	    <RelativeLayout
	        android:layout_height="fill_parent"
	        android:layout_width="wrap_content"
	        android:layout_marginLeft="2dp"
	        android:layout_alignParentLeft="true"
	        android:id="@+mtmlayout/rl_type"
	        android:paddingBottom="5dp"
	        android:gravity="center">
	        
	        <LinearLayout
	            android:layout_width="40dp"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:id="@+mtmlayout/ll_type"
	            android:visibility="gone"
	            android:layout_centerInParent="true">
		        <ImageView
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:id="@+mtmlayout/iv_type"
		            android:layout_gravity="center"
		            android:gravity="center"/>
	        </LinearLayout>
	        <LinearLayout
	            android:layout_width="45dp"
	            android:layout_height="28dp"
	            android:id="@+mtmlayout/ll_videothumb"
	            android:visibility="gone"
	            android:layout_centerInParent="true">
		        <ImageView
		            android:layout_width="fill_parent"
		            android:layout_height="fill_parent"
		            android:id="@+mtmlayout/iv_videothumb"
		            android:layout_gravity="center"
		            android:gravity="center"/>
	        </LinearLayout>
	    </RelativeLayout>
	
	    <TextView
			android:textColor="@android:color/white"
			android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_gravity="center"
	        android:ellipsize="end"
			android:maxLines="3"
			android:textSize="15dp"
			android:id="@+mtmlayout/tv_text"
			android:layout_marginLeft="2dp"
			android:layout_toRightOf="@+mtmlayout/rl_type"
			android:layout_toLeftOf="@+mtmlayout/rl_moment"
	        android:layout_centerVertical="true" />
	    
	    <RelativeLayout
	        android:layout_height="fill_parent"
	        android:layout_width="65dp"
	        android:layout_marginRight="2dp"
	        android:layout_alignParentRight="true"
	        android:id="@+mtmlayout/rl_moment"
	        android:paddingBottom="5dp"
	        android:gravity="center">
	        
	        <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:layout_centerInParent="true">
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#FFFFFFFF"
		            android:textSize="22dp"
		            android:layout_gravity="center"
		            android:gravity="center"
		            android:id="@+mtmlayout/tv_moment"/>
		        
		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:textColor="#FFFFFFFF"
		            android:id="@+mtmlayout/tv_time"
		            android:layout_gravity="center"
		            android:gravity="center"
		            android:layout_below="@+mtmlayout/tv_moment"/>
	        </LinearLayout>
	    </RelativeLayout>
	</RelativeLayout>
	
	<LinearLayout
        android:id="@+mtmlayout/toolbar"
		android:layout_marginBottom="-35dip"
		android:visibility="gone"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_height="35dip"
        android:layout_width="fill_parent">
        <ImageButton
            android:background="@null"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_read_quickaction"
            android:id="@+mtmlayout/ib_read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <ImageButton
            android:background="@null"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_share_quickaction"
            android:id="@+mtmlayout/ib_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        
        <ImageButton
            android:background="@null"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_video_quickaction"
            android:id="@+mtmlayout/ib_video"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>