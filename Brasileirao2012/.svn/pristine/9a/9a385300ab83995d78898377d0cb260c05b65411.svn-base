<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:actionbar="http://schemas.android.com/apk/res/br.com.zynger.brasileirao2012"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:background="@drawable/backrepeat"
	android:orientation="vertical">
	
    <br.com.zynger.brasileirao2012.view.CustomActionBar
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+stadiumsactivity/actionbar"
	    actionbar:logosrc="@drawable/ic_stadium" />
    
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical">
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="#23000000"
	        android:layout_margin="3dp"
	        android:padding="3dp"
	        android:orientation="horizontal">
	        
	        <ImageView
	            android:id="@+stadiumsactivity/iv_image"
	            android:layout_width="96dp"
	            android:layout_height="72dp"
	            android:layout_gravity="center"
	            android:visibility="gone" />
	        
	        <LinearLayout
	            android:id="@+stadiumsactivity/ll_data"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.50"
	            android:orientation="vertical"
	            android:padding="2dp" >
	            
	            <HorizontalScrollView
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:scrollbars="none">
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textIsSelectable="false"
		                android:id="@+stadiumsactivity/tv_name"
		                android:textColor="@android:color/white"/>
	            </HorizontalScrollView>
	            
	            <HorizontalScrollView
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:scrollbars="none">
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textIsSelectable="false"
		                android:id="@+stadiumsactivity/tv_nick"
		                android:textColor="@android:color/white"/>
	            </HorizontalScrollView>
	            
	            <HorizontalScrollView
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:scrollbars="none">
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textIsSelectable="false"
		                android:id="@+stadiumsactivity/tv_city"
		                android:textColor="@android:color/white"/>
	            </HorizontalScrollView>
	            
	            <HorizontalScrollView
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:scrollbars="none">
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textIsSelectable="false"
		                android:id="@+stadiumsactivity/tv_capacity"
		                android:textColor="@android:color/white"/>
	            </HorizontalScrollView>
	            
	            <HorizontalScrollView
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:scrollbars="none">
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textIsSelectable="false"
		                android:id="@+stadiumsactivity/tv_size"
		                android:textColor="@android:color/white"/>
	            </HorizontalScrollView>
	            
	            <HorizontalScrollView
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:scrollbars="none">
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textIsSelectable="false"
		                android:id="@+stadiumsactivity/tv_foundation"
		                android:textColor="@android:color/white"/>
	            </HorizontalScrollView>
	        </LinearLayout>
	    </LinearLayout>
	    
	    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#23000000"
	        android:layout_margin="3dp"
	        android:padding="3dp">
            <TextView
                android:id="@+stadiumsactivity/tv_description"
                android:textSize="16sp"
                android:textIsSelectable="false"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"/>
        </ScrollView>
	</LinearLayout>
</LinearLayout>