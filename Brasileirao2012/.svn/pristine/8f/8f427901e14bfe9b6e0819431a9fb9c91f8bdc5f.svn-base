<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical" >
	    
	    <TextView
	        android:padding="7dp"
	        android:id="@+guide8/tv_txt"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFFFF"/>
	    
	    <ImageView
	        android:layout_below="@+guide8/tv_txt"
	        android:src="@drawable/guide_guide8_trophies"
	        android:id="@+guide8/iv1"
	        android:layout_width="170dp"
	        android:layout_height="200dp"
	        android:layout_centerHorizontal="true"/>
	    
	    <TextView
	        android:padding="7dp"
	        android:layout_below="@+guide8/iv1"
	        android:id="@+guide8/tv_txt2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFFFF"/>
	    
	    <ImageView
	        android:layout_below="@+guide8/tv_txt2"
	        android:src="@drawable/guide_guide8_opentrophy"
	        android:id="@+guide8/iv2"
	        android:layout_width="511dp"
	        android:layout_height="170dp"
	        android:layout_margin="4dp"
	        android:layout_centerHorizontal="true"/>
	    
	    <TextView
	        android:padding="7dp"
	        android:layout_below="@+guide8/iv2"
	        android:id="@+guide8/tv_txt3"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFFFF"/>
	    
	    <ImageView
	        android:layout_below="@+guide8/tv_txt3"
	        android:src="@drawable/guide_guide8_mapview"
	        android:id="@+guide8/iv3"
	        android:layout_width="224dp"
	        android:layout_height="140dp"
	        android:layout_margin="4dp"
	        android:layout_centerHorizontal="true"/>
	    
	    <TextView
	        android:padding="7dp"
	        android:layout_below="@+guide8/iv3"
	        android:id="@+guide8/tv_txt4"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFFFF"/>
	    
	    <ImageView
	        android:layout_below="@+guide8/tv_txt4"
	        android:src="@drawable/guide_guide8_balloon"
	        android:id="@+guide8/iv4"
	        android:layout_width="225dp"
	        android:layout_height="150dp"
	        android:layout_margin="4dp"
	        android:layout_centerHorizontal="true"/>
	</RelativeLayout>
</ScrollView>