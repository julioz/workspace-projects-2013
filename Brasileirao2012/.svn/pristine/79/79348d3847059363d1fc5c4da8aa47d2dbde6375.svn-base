<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/movetomoverowbackgroundselector"
    android:orientation="horizontal" >

    <TextView
        android:id="@+movetomoverow/tv_holdmessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/movetomoveactivity_holdtoshare"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+movetomoverow/ll_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+movetomoverow/ll_time"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+movetomoverow/tv_moment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:textIsSelectable="false"
                android:textSize="35sp" />

            <TextView
                android:id="@+movetomoverow/tv_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+movetomoverow/tv_moment"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:textIsSelectable="false" />

            <ImageView
                android:id="@+movetomoverow/iv_sign"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_margin="1dp"
                android:visibility="invisible" />
        </RelativeLayout>

        <TextView
            android:id="@+movetomoverow/tv_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:textColor="@android:color/white"
            android:textIsSelectable="false" />

        <RelativeLayout
            android:id="@+movetomoverow/rl_videothumb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:visibility="gone" >

            <ImageButton
                android:id="@+movetomoverow/iv_videothumb"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:background="@null"
                android:padding="2dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignBottom="@+movetomoverow/iv_videothumb"
                android:layout_alignLeft="@+movetomoverow/iv_videothumb"
                android:layout_margin="6dp"
                android:src="@drawable/ic_video_quickaction" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>