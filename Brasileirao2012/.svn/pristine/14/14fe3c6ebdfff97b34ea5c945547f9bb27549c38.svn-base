<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_weight="2.5"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:gravity="center">
        
        <ImageView
			android:layout_height="156dp"
			android:layout_width="156dp"
			android:scaleType="fitCenter"
			android:adjustViewBounds="true"
			android:src="@drawable/img_logo"
			android:paddingTop="5dp"/>
        
        <br.com.zynger.brasileirao2012.view.TertreTextView
            android:text="@string/app_name"
            android:id="@+aboutactivity/tv_appname"
            android:gravity="center_horizontal"
            android:textSize="30sp"
            android:textIsSelectable="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>
		
		<TextView
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:textIsSelectable="false"
		    android:gravity="center"
		    android:textColor="@android:color/white"
		    android:id="@+aboutactivity/tv_version"/>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:gravity="bottom">
		<TextView
			android:textColor="@android:color/white"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/aboutactivity_developedby" 
			android:gravity="left"
			android:paddingLeft="5dp"/>
	  	
		<TextView
			android:textColor="@android:color/white"
			android:text="@string/aboutactivity_juliozynger"
			android:textSize="40sp"
			android:gravity="center_horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />
		
		<TextView
			android:textColor="@android:color/white"
			android:text="@string/aboutactivity_email"
			android:textSize="20sp"
			android:textStyle="bold"
			android:gravity="center_horizontal"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>