<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:background="@drawable/backrepeat"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical">
	
    <RelativeLayout
        android:background="@drawable/actionbar_gradient2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:padding="3dp"
            android:id="@+stadiumsactivity/action_iv"
            android:src="@drawable/ic_stadium"
            android:layout_centerVertical="true" />
        
        <br.com.zynger.brasileirao2012.view.TertreTextView
            android:id="@+stadiumsactivity/actionbar_name"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@+stadiumsactivity/action_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="30dp" />        
        
    </RelativeLayout>
    
	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical">
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="#23000000"
	        android:layout_margin="3dp"
	        android:padding="3dp"
	        android:orientation="horizontal">
	        
	        <ImageView
	            android:id="@+stadiumsactivity/iv_image"
	            android:layout_width="96dp"
	            android:layout_height="72dp"
	            android:layout_gravity="center"
	            android:visibility="gone" />
	        
	        <LinearLayout
	            android:id="@+stadiumsactivity/ll_data"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:layout_weight="0.50"
	            android:orientation="vertical"
	            android:padding="2dp" >
	            
	            <HorizontalScrollView
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:scrollbars="none">
		            <TextView
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:id="@+stadiumsactivity/tv_name"
		                android:textColor="@android:color/white"/>
	            </HorizontalScrollView>
	            
	            <HorizontalScrollView
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:scrollbars="none">
		            <TextView
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:id="@+stadiumsactivity/tv_nick"
		                android:textColor="@android:color/white"/>
	            </HorizontalScrollView>
	            
	            <HorizontalScrollView
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:scrollbars="none">
		            <TextView
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:id="@+stadiumsactivity/tv_city"
		                android:textColor="@android:color/white"/>
	            </HorizontalScrollView>
	            
	            <HorizontalScrollView
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:scrollbars="none">
		            <TextView
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:id="@+stadiumsactivity/tv_capacity"
		                android:textColor="@android:color/white"/>
	            </HorizontalScrollView>
	            
	            <HorizontalScrollView
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:scrollbars="none">
		            <TextView
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:id="@+stadiumsactivity/tv_size"
		                android:textColor="@android:color/white"/>
	            </HorizontalScrollView>
	            
	            <HorizontalScrollView
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:scrollbars="none">
		            <TextView
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:id="@+stadiumsactivity/tv_foundation"
		                android:textColor="@android:color/white"/>
	            </HorizontalScrollView>
	        </LinearLayout>
	    </LinearLayout>
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:background="#23000000"
	        android:layout_margin="3dp"
	        android:padding="3dp">
	        
	        <ScrollView
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent">
	            
	            <TextView
	                android:id="@+stadiumsactivity/tv_description"
	                android:textSize="16dp"
	                android:textColor="@android:color/white"
	                android:layout_height="wrap_content"
	                android:layout_width="fill_parent"/>
	        </ScrollView>
	    </LinearLayout>
	    
	</LinearLayout>
</LinearLayout>