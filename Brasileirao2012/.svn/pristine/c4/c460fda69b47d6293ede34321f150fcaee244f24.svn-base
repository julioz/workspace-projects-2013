<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<RelativeLayout
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:orientation="vertical" >
	    
	    <TextView
	        android:padding="7dp"
	        android:id="@+guide7/tv_txt"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFFFF"/>
	    
	    <ImageView
	        android:layout_below="@+guide7/tv_txt"
	        android:src="@drawable/guide_guide7_news"
	        android:id="@+guide7/iv1"
	        android:layout_width="143dp"
	        android:layout_height="160dp"
	        android:layout_centerHorizontal="true"/>
	    
	    <TextView
	        android:padding="7dp"
	        android:layout_below="@+guide7/iv1"
	        android:id="@+guide7/tv_txt2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textColor="#FFFFFFFF"/>
	    
	    <ImageView
	        android:layout_below="@+guide7/tv_txt2"
	        android:src="@drawable/guide_guide7_realtime"
	        android:id="@+guide7/iv2"
	        android:layout_width="220dp"
	        android:layout_height="160dp"
	        android:layout_margin="4dp"
	        android:layout_centerHorizontal="true"/>
	</RelativeLayout>
</ScrollView>