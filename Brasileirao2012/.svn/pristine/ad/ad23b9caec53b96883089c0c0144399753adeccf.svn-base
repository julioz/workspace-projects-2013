<?xml version="1.0" encoding="utf-8"?>
<TableRow
	xmlns:android="http://schemas.android.com/apk/res/android"  
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:paddingTop="3dp"
	android:paddingBottom="3dp">
	
	<TextView
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:textIsSelectable="false"
		android:layout_weight="0.7"
		android:textStyle="bold"
		android:textColor="#ffffff"
		android:gravity="center"
		android:textSize="17sp"
		android:layout_gravity="center"
		android:id="@+rankingrow/position"/>
		
	<ImageView
		android:layout_width="0dp"
		android:layout_height="48dp"
		android:layout_weight="1.9"
		android:layout_gravity="center_vertical"
		android:gravity="center_vertical"
		android:id="@+rankingrow/badge"/>
		
	<TextView
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:textIsSelectable="false"
		android:layout_weight="1"
		android:textSize="17sp"
		android:textColor="#ffffff"
		android:gravity="center"
		android:layout_gravity="center"
		android:id="@+rankingrow/points"/>
		
	<TextView
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:textIsSelectable="false"
		android:layout_weight="1"
		android:textSize="17sp"
		android:textColor="#ffffff"
		android:gravity="center"
		android:layout_gravity="center"
		android:id="@+rankingrow/played"/>
	
	<TextView
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:textIsSelectable="false"
		android:layout_weight="1"
		android:textColor="#ffffff"
		android:textSize="17sp"
		android:gravity="center"
		android:layout_gravity="center"
		android:id="@+rankingrow/win"/>
		
	<TextView
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:textIsSelectable="false"
		android:layout_weight="1"
		android:textSize="17sp"
		android:textColor="#ffffff"
		android:gravity="center"
		android:layout_gravity="center"
		android:id="@+rankingrow/draw"/>
		
	<TextView
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:textIsSelectable="false"
		android:layout_weight="1"
		android:textSize="17sp"
		android:textColor="#ffffff"
		android:gravity="center"
		android:layout_gravity="center"
		android:id="@+rankingrow/lose"/>
	
	<TextView
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:textIsSelectable="false"
		android:layout_weight="1"
		android:textSize="17sp"
		android:textColor="#ffffff"
		android:gravity="center"
		android:layout_gravity="center"
		android:id="@+rankingrow/goalspro"/>
	
	<TextView
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:textIsSelectable="false"
		android:layout_weight="1"
		android:textSize="17sp"
		android:textColor="#ffffff"
		android:gravity="center"
		android:layout_gravity="center"
		android:id="@+rankingrow/goalsagainst"/>
	
	<TextView
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:textIsSelectable="false"
		android:layout_weight="1"
		android:textSize="17sp"
		android:textColor="#ffffff"
		android:gravity="center"
		android:layout_gravity="center"
		android:id="@+rankingrow/balance"/>
</TableRow>