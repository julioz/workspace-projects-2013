<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Application theme. -->
    <style name="Theme.Brasileirao" parent="Theme.Sherlock.Light">
        <item name="android:actionBarStyle">@style/Widget.Brasileirao.ActionBar</item>
        <item name="android:actionModeStyle">@style/Widget.Brasileirao.ActionMode</item>
        <item name="android:actionModeCloseDrawable">@drawable/ic_cab_done_holo_dark</item>
        <item name="android:actionMenuTextAppearance">@style/Widget.Brasileirao.ActionModeTitle</item>
        <item name="android:displayOptions">showHome|useLogo</item>
    </style>

    <style name="Widget.Brasileirao.ActionBar" parent="Widget.Sherlock.Light.ActionBar">
        <item name="android:titleTextStyle">@style/Widget.Brasileirao.TitleTextStyle</item>
        <item name="android:background">@drawable/actionbar_background_dark</item>
    </style>
    
    <style name="Widget.Brasileirao.ActionMode" parent="Widget.Brasileirao.ActionBar" />
    
    <style name="Theme.Brasileirao.Bright" parent="Theme.Brasileirao">
        <item name="android:actionBarStyle">@style/Widget.Brasileirao.ActionBar.Bright</item>
    </style>

    <style name="Widget.Brasileirao.ActionBar.Bright" parent="Widget.Sherlock.Light.ActionBar">
        <item name="android:titleTextStyle">@style/Widget.Brasileirao.TitleTextStyle</item>
        <item name="android:background">@drawable/actionbar_background_bright</item>
    </style>

    <style name="Widget.Brasileirao.TitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
    </style>
    
    <style name="Widget.Brasileirao.ActionModeTitle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>