<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ActivatedRow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+matchviewlayout/ll_line_rodada"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone" >

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#40FFFFFF" />

        <TextView
            android:id="@+matchviewlayout/tv_rod"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#FFFFFFFF"
            android:textIsSelectable="false" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#40FFFFFF" />
    </LinearLayout>

    <View
        android:id="@+matchviewlayout/view_line_notrodada"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#40FFFFFF" />

    <TextView
        android:id="@+matchviewlayout/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFFFF"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+matchviewlayout/tv_stadium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="#FFFFFFFF"
        android:textIsSelectable="false" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+matchviewlayout/tv_position_home"
            android:layout_width="56dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:textColor="#FFFFFFFF"
            android:textIsSelectable="false"
            android:textSize="14sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+matchviewlayout/iv_home"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+matchviewlayout/tv_scr_h"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:textColor="#FFFFFFFF"
            android:textIsSelectable="false"
            android:textSize="36sp" />

        <LinearLayout
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="X"
                android:textColor="#FFFFFFFF"
                android:textIsSelectable="false"
                android:textSize="32sp" />

            <TextView
                android:id="@+matchviewlayout/tv_classico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:text="@string/matchviewlayout_rivalry"
                android:textColor="@android:color/white"
                android:textIsSelectable="false"
                android:textSize="8sp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+matchviewlayout/tv_scr_a"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:textColor="#FFFFFFFF"
            android:textIsSelectable="false"
            android:textSize="36sp" />

        <ImageView
            android:id="@+matchviewlayout/iv_away"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center" />

        <TextView
            android:id="@+matchviewlayout/tv_position_away"
            android:layout_width="56dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:textColor="#FFFFFFFF"
            android:textIsSelectable="false"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>