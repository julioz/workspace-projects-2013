<?xml version="1.0" encoding="utf-8"?>
<TableLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#FFFFFFFF"
  android:orientation="vertical"
  android:stretchColumns="1"
  android:shrinkColumns="0,2">
  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">

<TableLayout
  		xmlns:android="http://schemas.android.com/apk/res/android"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:shrinkColumns="0,1"
  		android:stretchColumns="2"
  		android:id="@+novo_vitima/tlTituloBarraVitima">
  		
  		<TableRow
  		android:layout_width="fill_parent" android:layout_height="wrap_content"
  		android:paddingTop="3sp" android:paddingBottom="3sp"
  		android:background="#FF068ED4">
  		
  		<ImageView
  		android:src="@drawable/victim_icon"
  		android:layout_gravity="left"
        android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_marginLeft="5dip"/>
        
        <TextView
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:id="@+novo_vitima/tvVitTit"
        android:gravity="center_vertical|right" android:paddingRight="20sp"
        android:text="Nova Vítima" android:textColor="#FFFFFFFF" android:textStyle="bold" android:textSize="17sp"/>
  		
  		<ImageButton
			android:src="@drawable/bt_add"
			android:id="@+novo_vitima/vitimaSalvar"
			android:background="@null"
			android:layout_gravity="right"
			android:paddingRight="10sp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
  		
  		</TableRow>
</TableLayout>

	<ScrollView
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:layout_below="@novo_vitima/tlTituloBarraVitima"
    android:layout_above="@+novo_vitima/tlVitDelete"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="horizontal|vertical">

	<TableLayout
  		xmlns:android="http://schemas.android.com/apk/res/android"
  		android:layout_width="fill_parent"
  		android:layout_height="fill_parent"
  		android:shrinkColumns="0"
  		android:stretchColumns="1"
  		android:padding="3px">
  		
  		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="fill_parent"
              android:textColor="#000000"
              android:gravity="center_vertical"
              android:text="Identificação:" />
              
            <EditText android:id="@+novo_vitima/etVitimaIdentificacao"
              android:layout_height="fill_parent"
              android:singleLine="true"
              android:scrollHorizontally="true"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:text="" />
		</TableRow>
		
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="fill_parent"
              android:textColor="#000000"
              android:gravity="center_vertical"
              android:text="Número de Possíveis Vítimas:" />
              
            <EditText android:id="@+novo_vitima/etVitimaNumPosVit"
              android:layout_height="fill_parent"
              android:inputType="number"
              android:singleLine="true"
              android:scrollHorizontally="true"
              android:layout_width="0dp"
           	 android:layout_weight="1"
              android:text="" />
		</TableRow>
		
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="fill_parent"
              android:textColor="#000000"
              android:gravity="center_vertical"
              android:text="Quantidade de Vivos:" />
              
            <EditText android:id="@+novo_vitima/etVitimaQtdVivos"
              android:layout_height="fill_parent"
              android:inputType="number"
              android:singleLine="true"
              android:scrollHorizontally="true"
              android:layout_width="0dp"
           	 android:layout_weight="1"
              android:text="" />
		</TableRow>
		
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="fill_parent"
              android:textColor="#000000"
              android:gravity="center_vertical"
              android:text="Quantidade de Mortos:" />
              
            <EditText android:id="@+novo_vitima/etVitimaQtdMortos"
              android:layout_height="fill_parent"
              android:inputType="number"
              android:singleLine="true"
              android:scrollHorizontally="true"
              android:layout_width="0dp"
           	 android:layout_weight="1"
              android:text="" />
		</TableRow>
		
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="fill_parent"
              android:textColor="#000000"
              android:gravity="center_vertical"
              android:text="Quantidade de Vivos Resgatados:" />
              
            <EditText android:id="@+novo_vitima/etVitimaQtdVivosResgatados"
              android:layout_height="fill_parent"
              android:inputType="number"
              android:singleLine="true"
              android:scrollHorizontally="true"
              android:layout_width="0dp"
           	 android:layout_weight="1"
              android:text="" />
		</TableRow>
		
		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="fill_parent"
              android:textColor="#000000"
              android:gravity="center_vertical"
              android:text="Quantidade de Mortos Removidos:" />
              
            <EditText android:id="@+novo_vitima/etVitimaQtdMortosRemov"
              android:layout_height="fill_parent"
              android:inputType="number"
              android:singleLine="true"
              android:scrollHorizontally="true"
              android:layout_width="0dp"
           	 android:layout_weight="1"
              android:text="" />
		</TableRow>
		
		<TableLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+novo_vitima/tlEstrutura">
		
			<TableRow
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+novo_vitima/trInicialEstrutura">
				<TextView android:layout_width="0dp"
	              android:layout_weight="1"
	              android:layout_height="fill_parent"
	              android:textColor="#000000"
	              android:text="Estrutura:"
	              android:gravity="center_vertical" />
	             
	            <LinearLayout android:layout_width="0dp"
	              android:layout_weight="1"
	              android:layout_height="fill_parent">
	            
		            <Spinner android:id="@+novo_vitima/spVitimaEstrut"
		           	 android:layout_width="0dp"
		           	 android:layout_weight="2"
		           	 android:layout_height="fill_parent" />
		           	 
		           	<ImageButton android:id="@+novo_vitima/spVitimaEstrutMais"
		           	 android:layout_width="wrap_content"
		           	 android:src="@drawable/bt_mais"
		           	 android:background="@null"
		           	 android:layout_height="fill_parent"/>
	          	 
				</LinearLayout>
			</TableRow>
		</TableLayout>
		
		<TableLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+novo_vitima/tlEquipe">
		
			<TableRow
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+novo_vitima/trInicialEquipe">
				<TextView android:layout_width="0dp"
	              android:layout_weight="1"
	              android:layout_height="fill_parent"
	              android:textColor="#000000"
	              android:text="Equipe:"
	              android:gravity="center_vertical" />
	             
	            <LinearLayout android:layout_width="0dp"
	              android:layout_weight="1"
	              android:layout_height="fill_parent">
	            
		            <Spinner android:id="@+novo_vitima/spVitimaTeam"
		           	 android:layout_width="0dp"
		           	 android:layout_weight="2"
		           	 android:layout_height="fill_parent" />
		           	 
		           	<ImageButton android:id="@+novo_vitima/spVitimaTeamMais"
		           	 android:layout_width="wrap_content"
		           	 android:src="@drawable/bt_mais"
		           	 android:background="@null"
		           	 android:layout_height="fill_parent"/>
	          	 
				</LinearLayout>
			</TableRow>
		</TableLayout>
		
		<TableLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			xmlns:android="http://schemas.android.com/apk/res/android"
			android:id="@+novo_vitima/tlPerigo">
		
			<TableRow
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+novo_vitima/trInicialPerigo">
				<TextView android:layout_width="0dp"
	              android:layout_weight="1"
	              android:layout_height="fill_parent"
	              android:textColor="#000000"
	              android:text="Perigo:"
	              android:gravity="center_vertical" />
	             
	            <LinearLayout android:layout_width="0dp"
	              android:layout_weight="1"
	              android:layout_height="fill_parent">
	            
		            <Spinner android:id="@+novo_vitima/spVitimaPerigo"
		           	 android:layout_width="0dp"
		           	 android:layout_weight="2"
		           	 android:layout_height="fill_parent" />
		           	 
		           	<ImageButton android:id="@+novo_vitima/spVitimaPerigoMais"
		           	 android:layout_width="wrap_content"
		           	 android:src="@drawable/bt_mais"
		           	 android:background="@null"
		           	 android:layout_height="fill_parent"/>
	          	 
				</LinearLayout>
			</TableRow>
		</TableLayout>
	
	</TableLayout>
	</ScrollView>
	
	<TableLayout
  		xmlns:android="http://schemas.android.com/apk/res/android"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:gravity="bottom"
  		android:id="@novo_vitima/tlVitDelete"
  		android:shrinkColumns="0"
  		android:stretchColumns="1"
  		android:layout_alignParentBottom="true"
  		android:orientation="horizontal">
  		
  		<TableRow
  		android:layout_width="fill_parent" android:layout_height="fill_parent"
  		android:paddingTop="3sp" android:paddingBottom="3sp"
  		android:background="#FF668E54">
  		
  		<ImageView
  		android:src="@drawable/bt_delete"
  		android:layout_gravity="left"  android:id="@+novo_vitima/ivDelVit"
        android:layout_height="fill_parent" android:layout_width="fill_parent"
        android:layout_marginLeft="5dip"/>
        
        <TextView
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:gravity="center_vertical" android:paddingRight="20sp"  android:id="@+novo_vitima/tvDelVit"
        android:text="Excluir Vítima" android:textColor="#FFFFFFFF" android:textStyle="bold" android:textSize="17sp"/>
  		
  		</TableRow>
</TableLayout>

</RelativeLayout>
</TableLayout>