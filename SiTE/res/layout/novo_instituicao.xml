<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#FFFFFFFF"
  android:orientation="vertical">

<TableLayout
  		xmlns:android="http://schemas.android.com/apk/res/android"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content"
  		android:scrollbarAlwaysDrawVerticalTrack="true"
  		android:shrinkColumns="0,1"
  		android:stretchColumns="2">
  		
  		<TableRow
  		android:layout_width="fill_parent" android:layout_height="wrap_content"
  		android:paddingTop="3sp" android:paddingBottom="3sp"
  		android:background="#FF068ED4">
  		
  		<ImageView
  		android:src="@drawable/ic_instituicao"
  		android:layout_gravity="left"
        android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_marginLeft="5dip"/>
        
        <TextView
        android:layout_width="fill_parent" android:layout_height="fill_parent"
        android:gravity="center_vertical|right" android:paddingRight="20sp"
        android:text="Nova Instituição" android:textColor="#FFFFFFFF" android:textStyle="bold" android:textSize="17sp"/>
  		
  		
			
		<ImageButton
			android:src="@drawable/bt_add"
			android:id="@+novo_instituicao/btCriaInst"
			android:background="@null"
			android:layout_gravity="right"
			android:paddingRight="10sp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
  		
  		</TableRow>
</TableLayout>

<ScrollView
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent" 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:scrollbars="horizontal|vertical">


    <TableLayout
  		xmlns:android="http://schemas.android.com/apk/res/android"
  		android:layout_width="fill_parent"
  		android:layout_height="fill_parent"
  		android:stretchColumns="0,1"
  		android:paddingTop="6px"
  		android:paddingLeft="3px"
  		android:paddingRight="3px"
  		android:paddingBottom="3px">
  		
  		<TableRow android:layout_width="fill_parent" android:layout_height="wrap_content">
  			<RadioGroup
			android:id="@+novo_instituicao/rgInst1"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			
				<RadioButton
				android:text="Bombeiros"
				android:textColor="#000000"
				android:layout_width="fill_parent"
				android:id="@+novo_instituicao/rbBombeiros" />
				
				<RadioButton
				android:text="Polícia Militar"
				android:textColor="#000000"
				android:layout_width="fill_parent"
				android:id="@+novo_instituicao/rbPoliciaMilitar" />
				
				<RadioButton
				android:text="Def. Civil Mun."
				android:textColor="#000000"
				android:layout_width="fill_parent"
				android:id="@+novo_instituicao/rbDefCivilMun" />
				
				<RadioButton
				android:text="Comlurb"
				android:textColor="#000000"
				android:layout_width="fill_parent"
				android:id="@+novo_instituicao/rbComlurb" />
				
				<RadioButton
				android:text="CET-Rio"
				android:textColor="#000000"
				android:layout_width="fill_parent"
				android:id="@+novo_instituicao/rbCetRio" />
				
				<RadioButton
				android:text="INEA"
				android:textColor="#000000"
				android:layout_width="fill_parent"
				android:id="@+novo_instituicao/rbINEA" />
				
				<RadioButton
				android:text="CEDAE"
				android:textColor="#000000"
				android:layout_width="fill_parent"
				android:id="@+novo_instituicao/rbCEDAE" />
				
				<RadioButton
				android:text="Geo-Rio"
				android:textColor="#000000"
				android:layout_width="fill_parent"
				android:id="@+novo_instituicao/rbGeoRio" />
				
				<RadioButton
				android:text="Exército"
				android:textColor="#000000"
				android:layout_width="fill_parent"
				android:id="@+novo_instituicao/rbExercito" />
				
				<RadioButton
				android:text="Aeronáutica"
				android:textColor="#000000"
				android:layout_width="fill_parent"
				android:id="@+novo_instituicao/rbAeronautica" />
			
			</RadioGroup>
			<RadioGroup
			android:id="@+novo_instituicao/rgInst2"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			
				<RadioButton
				android:text="Voluntário"
				android:textColor="#000000"
				android:layout_width="fill_parent"
				android:id="@+novo_instituicao/rbVoluntario" />
				
				<RadioButton
				android:text="Polícia Civil"
				android:textColor="#000000"
				android:layout_width="fill_parent"
				android:id="@+novo_instituicao/rbPoliciaCivil" />
				
				<RadioButton
				android:text="Def. Civil Estad."
				android:textColor="#000000"
				android:layout_width="fill_parent"
				android:id="@+novo_instituicao/rbDefCivilEstad" />
				
				<RadioButton
				android:text="IBAMA"
				android:textColor="#000000"
				android:layout_width="fill_parent"
				android:id="@+novo_instituicao/rbIBAMA" />
				
				<RadioButton
				android:text="CEG"
				android:textColor="#000000"
				android:layout_width="fill_parent"
				android:id="@+novo_instituicao/rbCEG" />
				
				<RadioButton
				android:text="Light"
				android:textColor="#000000"
				android:layout_width="fill_parent"
				android:id="@+novo_instituicao/rbLight" />
				
				<RadioButton
				android:text="IML"
				android:textColor="#000000"
				android:layout_width="fill_parent"
				android:id="@+novo_instituicao/rbIML" />
				
				<RadioButton
				android:text="CNEN"
				android:textColor="#000000"
				android:layout_width="fill_parent"
				android:id="@+novo_instituicao/rbCNEN" />
				
				<RadioButton
				android:text="Marinha"
				android:textColor="#000000"
				android:layout_width="fill_parent"
				android:id="@+novo_instituicao/rbMarinha" />
			
			</RadioGroup>
  		</TableRow>
  		
  		<TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
			<TextView android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="fill_parent"
              android:textColor="#000000"
              android:text="Chefe da Instituição:"
              android:gravity="center_vertical" />
              
            <EditText android:id="@+novo_instituicao/etChefeInstituicao"
              android:layout_height="fill_parent"
              android:singleLine="true"
              android:scrollHorizontally="true"
              android:layout_width="0dp"
              android:focusable="true"
              android:layout_weight="1"
              android:text="" />
		</TableRow>
	</TableLayout>
	</ScrollView>

</LinearLayout>