<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingTop="1dp"
    android:paddingBottom="1dp"
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+historyfinalsrow/iv_winner"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="12dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        
        <ImageView
            android:id="@+historyfinalsrow/iv_runnerup"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        
        <TextView
	        android:id="@+historyfinalsrow/tv_year"
	        android:gravity="center"
	        android:layout_centerVertical="true"
	        android:textSize="18dp"
	        android:layout_toRightOf="@+historyfinalsrow/iv_winner"
            android:layout_toLeftOf="@+historyfinalsrow/iv_runnerup"
	        android:textColor="@android:color/black"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"/>
    </RelativeLayout>
	
    <LinearLayout
        android:id="@+historyfinalsrow/toolbar"
		android:layout_marginBottom="-52dip"
        android:visibility="gone"
        android:layout_height="52dip"
        android:layout_width="fill_parent"
        android:orientation="vertical">
        
        <LinearLayout
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="fill_parent">
				<TextView
					android:id="@+historyfinalsrow/tv_score1"
					android:gravity="center"
					android:textColor="@android:color/black"
					android:textSize="13dp"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"/>
				<TextView
					android:id="@+historyfinalsrow/tv_venue1"
					android:gravity="center"
					android:ellipsize="end"
			        android:scrollHorizontally="true"
			        android:maxLines="1"
			        android:singleLine="true"
					android:textColor="@android:color/black"
					android:textSize="13dp"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent">
                <TextView
					android:id="@+historyfinalsrow/tv_score2"
					android:gravity="center"
					android:ellipsize="end"
			        android:scrollHorizontally="true"
			        android:maxLines="1"
			        android:singleLine="true"
					android:textColor="@android:color/black"
					android:textSize="13dp"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"/>
				<TextView
					android:id="@+historyfinalsrow/tv_venue2"
					android:gravity="center"
					android:textColor="@android:color/black"
					android:textSize="13dp"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"/>
            </LinearLayout>
            
        </LinearLayout>
		<TextView
	        android:id="@+historyfinalsrow/tv_penalties"
	        android:gravity="center"
	        android:visibility="gone"
	        android:textColor="@android:color/black"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>