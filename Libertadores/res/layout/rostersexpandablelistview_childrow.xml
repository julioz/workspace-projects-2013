<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:id="@+rosterselv_childrow/tv_number"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:gravity="center"
        android:layout_weight="0.75"/>
    
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:id="@+rosterselv_childrow/tv_name"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:gravity="center"
        android:layout_weight="3"/>
    
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:id="@+rosterselv_childrow/tv_birthdate"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:gravity="center"
        android:layout_weight="2"/>
    
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:id="@+rosterselv_childrow/tv_nationality"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:gravity="center"
        android:layout_weight="1"/>
    
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:id="@+rosterselv_childrow/tv_height"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:gravity="center"
        android:layout_weight="1"/>
    
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:id="@+rosterselv_childrow/tv_weigth"
        android:textColor="@android:color/black"
        android:textSize="12dp"
        android:gravity="center"
        android:layout_weight="1"/>

</LinearLayout>