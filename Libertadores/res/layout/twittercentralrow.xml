<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:baselineAligned="false"
    android:layout_height="72dp"
    android:orientation="horizontal">
    
    <RelativeLayout
        android:layout_width="54dp"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:id="@+twittercentralrow/rl_datethumb">
        
        <ImageView
			android:id="@+twittercentralrow/iv_thumbnail"
			android:layout_width="42dp"
			android:layout_height="42dp" />
        
        <TextView
            android:id="@+twittercentralrow/tv_author"
            android:layout_below="@+twittercentralrow/iv_thumbnail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:textColor="@android:color/black"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="2.5">
        <TextView
		    android:textColor="@android:color/black"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:ellipsize="end"
		    android:id="@+twittercentralrow/tv_title"
		    android:textSize="14dp"
		    android:padding="2dp" />
    </RelativeLayout>
</LinearLayout>