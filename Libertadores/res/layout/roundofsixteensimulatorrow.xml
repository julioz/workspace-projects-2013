<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="2dp"
    android:paddingBottom="1dp"
    android:orientation="vertical" >
    
    <LinearLayout
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:weightSum="3">
        
        <View
	        android:layout_width="0dp"
	        android:layout_height="1dp"
	        android:layout_gravity="center"
	        android:layout_weight="1"
	        android:background="#40000000"/>
        
		<TextView
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_gravity="center"
	        android:gravity="center"
	        android:textColor="@android:color/black"
	        android:id="@+roundofsixteensimulatorrow/tv_date"/>
        
        <View
	        android:layout_width="0dp"
	        android:layout_height="1dp"
	        android:layout_gravity="center"
	        android:layout_weight="1"
	        android:background="#40000000"/>
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_toLeftOf="@+roundofsixteensimulatorrow/iv_home"
            android:id="@+roundofsixteensimulatorrow/tv_home_position"/>
        
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_toLeftOf="@+roundofsixteensimulatorrow/rl_home_score"
            android:id="@+roundofsixteensimulatorrow/iv_home"/>
        
        <RelativeLayout
            android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:id="@+roundofsixteensimulatorrow/rl_home_score"
	        android:layout_toLeftOf="@+roundofsixteensimulatorrow/tv_score_x">
	        
            <TextView
		        android:layout_width="36dp"
		        android:layout_height="48dp"
		        android:textSize="36dp"
		        android:id="@+roundofsixteensimulatorrow/tv_score_home"
		        android:gravity="center"
		        android:textColor="@android:color/black"/>
            
        </RelativeLayout>
        
        <TextView
	        android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:textSize="36dp"
	        android:gravity="center"
	        android:layout_centerHorizontal="true"
	        android:id="@+roundofsixteensimulatorrow/tv_score_x"
	        android:textColor="@android:color/black"
	        android:text="X"/>
        
        <RelativeLayout
            android:layout_width="48dp"
	        android:layout_height="48dp"
	        android:id="@+roundofsixteensimulatorrow/rl_away_score"
	        android:layout_toRightOf="@+roundofsixteensimulatorrow/tv_score_x">
            
            <TextView
		        android:layout_width="48dp"
		        android:layout_height="36dp"
		        android:id="@+roundofsixteensimulatorrow/tv_score_away"
		        android:textSize="36dp"
		        android:gravity="center"
		        android:textColor="@android:color/black"/>
            
        </RelativeLayout>
        
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+roundofsixteensimulatorrow/iv_away"
            android:layout_toRightOf="@+roundofsixteensimulatorrow/rl_away_score"
            android:layout_gravity="center"/>
        
        <TextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textColor="@android:color/black"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_toRightOf="@+roundofsixteensimulatorrow/iv_away"
            android:id="@+roundofsixteensimulatorrow/tv_away_position"/>
        
    </RelativeLayout>
</LinearLayout>