<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:orientation="horizontal" >
    
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:id="@+matchdetailsrow/tv_number_home"/>
    
    <TextView
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="fill_parent"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:id="@+matchdetailsrow/tv_name_home"/>
    
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:padding="1dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:id="@+matchdetailsrow/iv_card_home"/>
    
    <View
        android:layout_height="fill_parent"
        android:layout_width="1dp"
        android:background="#ddd"/>
    
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:id="@+matchdetailsrow/tv_number_away"/>
    
    <TextView
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="fill_parent"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:id="@+matchdetailsrow/tv_name_away"/>
    
    <ImageView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:padding="1dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:id="@+matchdetailsrow/iv_card_away"/>

</LinearLayout>