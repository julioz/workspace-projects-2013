<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+clubselectoractivity/ll_contentview"
    android:background="@android:color/white"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:background="@drawable/gradient_titlebar">
        
        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="2dp"
            android:src="@drawable/badge_dummy"
            android:id="@+clubselectoractivity/titlebar_ivlogo"
            android:layout_centerVertical="true"
            android:padding="4dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />
        
        <br.com.zynger.libertadores.view.HelveticaTextView
	        android:layout_width="wrap_content"
	        android:layout_height="fill_parent"
	        android:id="@+clubselectoractivity/titlebar_tvtitle"
	        android:textColor="#FF3B3B3B"
	        android:layout_centerVertical="true"
	        android:layout_margin="5dp"
	        android:layout_toRightOf="@+clubselectoractivity/titlebar_ivlogo"
	        android:gravity="left|center_vertical"
	        android:layout_marginLeft="10dp"
	        android:shadowColor="#FFFFFFFF"
            android:shadowRadius="0.5"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
	        android:textSize="26dp"/>
    </RelativeLayout>
    
    <ListView
		android:layout_height="0dp"
		android:layout_width="fill_parent"
		android:id="@+id/android:list"
		android:paddingLeft="3dp"
		android:paddingRight="3dp"
		android:cacheColorHint="#00000000"
		android:divider="#20000000"
		android:background="@null"
		android:layout_weight="1"/>

</LinearLayout>