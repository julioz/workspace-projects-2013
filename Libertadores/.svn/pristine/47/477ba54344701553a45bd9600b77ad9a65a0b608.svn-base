<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="2" >
    
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+matchdetailsgoalsrow/ll_home"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+matchdetailsgoalsrow/iv_badge_home"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="3dp"
            android:layout_height="36dp"
            android:layout_width="36dp"/>
        
        <TextView
            android:id="@+matchdetailsgoalsrow/tv_time_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        
        <TextView
            android:id="@+matchdetailsgoalsrow/tv_name_home"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_margin="2dp"
            android:textColor="@android:color/black"/>
        
    </LinearLayout>
    
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+matchdetailsgoalsrow/rl_away"
        android:layout_height="wrap_content">
        
        <TextView
            android:id="@+matchdetailsgoalsrow/tv_name_away"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+matchdetailsgoalsrow/tv_time_away"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_margin="2dp"
            android:textColor="@android:color/black"/>
        
        <TextView
            android:id="@+matchdetailsgoalsrow/tv_time_away"
            android:layout_toLeftOf="@+matchdetailsgoalsrow/iv_badge_away"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        
        <ImageView
            android:id="@+matchdetailsgoalsrow/iv_badge_away"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:padding="3dp"
            android:layout_height="36dp"
            android:layout_width="36dp"/>
    </RelativeLayout>
</LinearLayout>