<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:baselineAligned="false"
    android:layout_height="88dp"
    android:orientation="horizontal">
    
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:id="@+newsrow/rl_datethumb"
        android:layout_weight="1">
        
        <TextView
		    android:textColor="@android:color/black"
		    android:id="@+newsrow/tv_pubdate"
		    android:layout_height="wrap_content"
		    android:layout_width="wrap_content"
		    android:gravity="center"
		    android:textSize="14dp"
		    android:layout_centerHorizontal="true"
		    android:padding="1dp"/>
        
        <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="82dp"
	        android:layout_below="@+newsrow/tv_pubdate"
	        android:layout_alignParentRight="true"
	        android:layout_centerVertical="true"
	        android:gravity="center"
	        android:id="@+newsrow/ll_thumbnail">
	        <br.com.zynger.libertadores.view.ResizableImageView
				android:id="@+newsrow/iv_thumbnail"
				android:layout_width="match_parent"
				android:layout_height="match_parent" />
	    </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="2.5">
        <br.com.zynger.libertadores.view.HelveticaTextView
		    android:textColor="@android:color/black"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:ellipsize="end"
		    android:lineSpacingMultiplier="1.6"
		    android:id="@+newsrow/tv_title"
		    android:maxLines="2"
		    android:textSize="14dp"
		    android:textStyle="bold"
		    android:padding="2dp" />
        
        <TextView
		    android:textColor="@android:color/black"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:ellipsize="end"
		    android:maxLines="4"
		    android:id="@+newsrow/tv_subtitle"
		    android:layout_marginTop="-18dp"
		    android:layout_below="@+newsrow/tv_title"
		    android:textSize="11dp"
		    android:padding="2dp" />
        
        
    </RelativeLayout>
    
</LinearLayout>