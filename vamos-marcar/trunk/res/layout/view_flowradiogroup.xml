<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:titlepager="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <com.viewpagerindicator.TitlePageIndicator
        android:id="@+flowradiogroup/titleindicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/lightgray"
        titlepager:footerColor="@android:color/transparent"
        titlepager:footerIndicatorColor="@color/holo_blue_light"
        titlepager:footerIndicatorHeight="1dp"
        titlepager:footerIndicatorStyle="underline"
        titlepager:footerLineHeight="2dp"
        titlepager:selectedColor="@color/holo_blue_dark" />

    <android.support.v4.view.ViewPager
        android:id="@+flowradiogroup/viewpager"
        android:layout_width="wrap_content"
        android:layout_height="1dp" />

</LinearLayout>