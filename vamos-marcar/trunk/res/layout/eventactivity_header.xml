<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res/br.com.zynger.vamosmarcar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+eventactivity/iv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+eventactivity/iv_header" >

        <LinearLayout
            android:id="@+eventactivity/ll_headertext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#98000000"
            android:orientation="horizontal" >

            <br.com.zynger.vamosmarcar.view.RobotoTextView
                android:id="@+eventactivity/tv_header"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="2dp"
                android:ellipsize="end"
                android:gravity="center_vertical|right"
                android:maxLines="2"
                android:paddingRight="8dp"
                android:paddingLeft="50dp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                font:typeface="roboto_light" />
        </LinearLayout>

        <br.com.zynger.vamosmarcar.view.FacebookImageView
            android:id="@+eventactivity/iv_user_picture"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_alignBottom="@+eventactivity/ll_headertext"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="7dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />
    </RelativeLayout>

</RelativeLayout>